<%- include('hub/top'); -%>
<!-- <div class="login-box container-fluid"> -->
  <div class="container-fluid login-box" >
    <a href="/">
      <img src="img/lislogo.png" width="100%" />
    </a>
    <div class="row" >
      <!-- <div class="col-sm-3"></div> -->
      <div class="col-sm-12" >
        <div class="card" style="width: 100%; ">
          <div class="card-body">
          <form action="/addOfficer" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="type" value="Applaud" />
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <input
                  type="number"
                  name="id"
                  id=""
                  class="form-control"
                  placeholder="0002"
                />
              </li>
              <li class="list-group-item">
                <input
                  type="text"
                  name="firstName"
                  id=""
                  class="form-control"
                  placeholder="Eg: First Name"
                />
              </li>
              <li class="list-group-item">
                <input
                  type="text"
                  name="lastName"
                  id=""
                  class="form-control"
                  placeholder="Eg: Last Name"
                />
              </li>
              <li class="list-group-item">
                <input
                  type="email"
                  name="email"
                  id=""
                  class="form-control"
                  placeholder="Eg: jflomo@gmail.com"
                />
              </li>
              <li class="list-group-item">
                <input
                  type="number"
                  name="phone"
                  id=""
                  class="form-control"
                  placeholder="0880000000"
                />
              </li>
              <li class="list-group-item">
                <input
                  type="number"
                  name="phone1"
                  id=""
                  class="form-control"
                  placeholder="0880000000"
                />
              </li>
              <li class="list-group-item">
                <label class=" col-form-label form-control-label" for="image">Officer Photo</label
              >
                <input type="file" class="form-control" name="image" />
              </li>
              <li class="list-group-item">
                <label for="gender">Select officer gender</label>
                <select name="gender" class="form-control">
                  <option value="">Select Gender</option>
                  <option value="male">Male</option>
                  <option value="female">Female</option>
                </select>
              </li>
              <li class="list-group-item">
                <label for="assignment">Select Educational Level</label>
                <select name="education" class="form-control">
                  <option value="High School DropOut">High School DropOut</option>
                  <option value="High School Graduate">High School Graduate</option>
                  <option value="College DropOut">College DropOut</option>
                  <option value="College Student">College Student</option>
                  <option value="College Graduate">College Graduate</option>
                  <option value="Master Degree">Master Degree</option>
                  <option value="Dr. Degree">Dr. Degree</option>
                </select>
              </li>
              <li class="list-group-item">
                <label for="assignment">Select county of assignment</label>
                <select name="assignment" class="form-control">
                  <option value="">Select County</option>
                  <option value="Bomi">Bomi</option>
                  <option value="Bong">Bong</option>
                  <option value="Gbarpolu">Gbarpolu</option>
                  <option value="Grand Bassa">Grand Bassa</option>
                  <option value="Grand Cape Mount">Grand Cape Mount</option>
                  <option value="Grand Gedeh">Grand Gedeh</option>
                  <option value="Grand Kru">Grand Kru</option>
                  <option value="Lofa">Lofa</option>
                  <option value="Margibi">Margibi</option>
                  <option value="Maryland">Maryland</option>
                  <option value="Montserrado">Montserrado</option>
                  <option value="Nimba">Nimba</option>
                  <option value="Rivercess">Rivercess</option>
                  <option value="River Gee">River Gee</option>
                  <option value="Sinoe">Sinoe</option>
                </select>
              </li>
              <li class="list-group-item">
                <select name="position" class="form-control">
                  <option value="">Select Position</option>
                  <% positions.forEach(pos => { %>
                  <option value="<%= pos.title %>"><%= pos.title %></option>
                  <% }); %>
                </select>
              </li>
              <li class="list-group-item">
                <textarea
                  name="content"
                  id=""
                  cols="20"
                  rows="10"
                  class="form-control"
                ></textarea>
              </li>
            </ul>
            <div class="card-body">
              <input
                type="submit"
                class="card-link btn btn-success"
                style="float: right"
                value="Add Officer"
              />
            </div>
          </form>
        </div>
        </div>
      </div>
      <!-- <div class="col-sm-3"></div> -->
    </div>
  </div>
<!-- </div> -->
<%- include('hub/bottom'); -%>

<%- include('hub/top'); -%>

<!-- Navbar -->
<%- include('hub/nav'); -%>


<!-- left side bar component  -->
<%- include('hub/sidebar'); -%>

        
           <br>
           <h1 class="display-2">User</h1>
           <table class="table table-hover table-dark desplay" id="example">
                <thead>
                <tr>
                    
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="row">Photos</th>
                    <th scope="col">Status</th>
                </tr>
                </thead>
                <tbody>
                <% users.forEach(user => { %> 
                    <tr>
                        <td><%= user.fullName %></td>
                        <td><%= user.email %></td>
                        <td><img src="/images/users/<%= user.image %>" alt="" style="width: 50px"></td>
                        <td><%= user.status %></td>
                        <td><a href="/admin/editUser/<%= user._id %>"><i class="fas fa-edit"></i></a></td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>

<!-- Bottom component -->
<%- include('hub/bottom'); -%>